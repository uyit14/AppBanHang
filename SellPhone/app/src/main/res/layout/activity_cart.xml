<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.uy.sellphone.activity.CartActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarcart"
        android:background="#6e70f1"
        app:title="Cart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtemptycart_cart"
                android:textSize="30sp"
                android:text="No pruduct in your cart!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/listViewCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#ff00"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:text="Total: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/txtTotalPrice_cart"
                android:textColor="#ff00"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:text="10000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btnPayment_cart"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/buy_continueby"
            android:text="Paymen"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/btncontinue_cart"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/buy_continueby"
            android:text="Continue Shopping"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>
